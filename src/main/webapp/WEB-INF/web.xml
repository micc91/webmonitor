<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>

	<jsp-config>
		<jsp-property-group>
			<url-pattern>*.jsp</url-pattern>
			<include-prelude>/WEB-INF/taglibs.jsp</include-prelude>
		</jsp-property-group>
	</jsp-config>
  <servlet>
  	<servlet-name>Page</servlet-name>
  	<display-name>Page</display-name>
  	<description>Test page</description>
  	<servlet-class>com.example.webmonitor.Page</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>Login</servlet-name>
  	<display-name>Login</display-name>
  	<description>Welcome page</description>
  	<servlet-class>com.example.webmonitor.Login</servlet-class>
  </servlet>
    <servlet>
        <servlet-name>InitApp</servlet-name>
        <servlet-class>com.example.webmonitor.log4j.InitApp</servlet-class>
		<init-param>
			<param-name>log4j-config</param-name>
			<param-value>WEB-INF/classes/log4j.properties</param-value>
		</init-param>
		<init-param>
			<param-name>log4j-log-path</param-name>
			<param-value>WEB-INF/log</param-value>
		</init-param>
		<load-on-startup>1</load-on-startup>
	</servlet>
    <servlet>
        <servlet-name>Dashboard</servlet-name>
        <servlet-class>com.example.webmonitor.Dashboard</servlet-class>
    </servlet>
    <servlet-mapping>
  	<servlet-name>Page</servlet-name>
  	<url-pattern>/page</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>Login</servlet-name>
  	<url-pattern>/login</url-pattern>
  </servlet-mapping>
</web-app>
